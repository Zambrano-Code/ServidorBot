                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="border_animati" Grid.Column="0" Background="{DynamicResource Button.IconServer.LabelSelect.Default}" Width="0" HorizontalAlignment="Left" Height="0" CornerRadius="0, 3, 3, 0"/>

<UserControl x:Class="ServidorBot.src.View.UserControls.TimeStampPick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServidorBot.src.View.UserControls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Text}" Foreground="{DynamicResource Windows.TextFondo1}" Grid.ColumnSpan="2" FontWeight="Bold" Margin="10,0,0,0"/>
        <local:DataTimePicker DataContext="{Binding DateTime}" Grid.Row="1"/>
    </Grid>
</UserControl>
